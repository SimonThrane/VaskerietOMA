<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>

<script>
    var id;
    var actualtd;
    $(document).on('click', '.rid', function() {
        actualtd = $(this);
        id = $(this).find("#ID").data().value;
        var url = $('#myModal').data('url') + '/' + id.toString();
        $.get(url, function(data) {
            $('#ModalBody').html(data);
        });

        $('#myModal').modal('show');
    });

    $(document).on('click', '.close', function() {
        $.ajax({
            url: '@Url.Action("IsBooked", "Home")',
            method: "Get",
            cache: false,
            data: { Id: id }
        }).done(function(d) {
            if (d) {
                actualtd.addClass('booked');
                getRoomNumber();              
            }
        });
    });

    function getRoomNumber() {
        $.ajax({
                url: '@Url.Action("GetRoomNumber", "Home")',
            method: "Get",
            cache: false,
            data: { Id: id }
        }).done(function (d) {
            if (d != -1 || d != 0) {
                actualtd.remove('.roomnumber');
                actualtd.append(d);
            }
        });
    }


</script>
