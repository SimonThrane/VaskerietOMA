@model IEnumerable<MyModel.WashTime.WashTime>

<link href="~/Content/Day.css" rel="stylesheet" type="text/css"/>
<div class="container">
    <h2 class="center">Dagens vasketider</h2>
    <h3 class="center">@Model.First().Time.ToShortDateString()</h3>

    <table class="col-md-5 col-sm-12 col-xs-12">
        <caption>Vaske tider for Venstre vaskemaskine</caption>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Machine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Where(m => m.Machine == "Left"))
        {
            <tr class="rid">
                <div id="ID" style="display: none;" data-value="@item.ID"></div>

                <th>@item.Time.ToShortTimeString()</th>
                <td>
                    @Html.DisplayFor(modelItem => item.Machine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
            </tr>
        }
    </table>

    <table class="col-md-offset-2 col-md-5 col-sm-12 col-xs-12">
        <caption>Vaske tider for Højre vaskemaskine</caption>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Machine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNumber)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Where(m => m.Machine == "Right"))
        {
            <tr class="rid">
                <div id="ID" style="display: none;" data-value="@item.ID)"></div>
                <th>@item.Time.ToShortTimeString()</th>
                <td>
                    @Html.DisplayFor(modelItem => item.Machine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
            </tr>
        }
    </table>
<!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog" data-url='@Url.Action("Booking")'>
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Book en vasketid</h4>
                </div>
                <div id="ModalBody" class="modal-body">
                    <p>Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>


    <script>
    $(document).ready(function() {
    });

    $(document).on('click', '.rid', function () {
        console.log("Click function called");
        var id = $(this).find("#ID").data().value;
        console.log(id.toString());
        var url = $('#myModal').data('url') + '/' + id.toString();

        $.get(url, function(data) {
            $('#ModalBody').html(data);
        });

        $('#myModal').modal('show');
    });



    </script>

</div>


